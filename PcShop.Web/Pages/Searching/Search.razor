@page "/search/{Phrase}"
@page "/search"

<div class="container">
    
    <EditForm Model="@Phrase" class="my-2 my-lg-0">
        <InputTextArea @bind-Value="Phrase" placeholder="Search" aria-label="Search" type="search" class="form-control mr-sm-2" />

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="@HandleSearchChange()">Search</button>


        @if (FoundedEntities.ManufacturerEntities.Any())
        {
    <h1> Founded manufacturers</h1>







        }

        @if (FoundedEntities.ProductEntities.Any())
        {
            <h1> Founded notebooks</h1>
            <div class="grid-containerList">
                <div class="FiltersArea">
                    <div class="d-flex flex-column bd-highlight mb-3 flexFilters">
                        <h2>Filters</h2>
                        <h3>Manufacturers:</h3>
                        <div class="p-2 bd-highlight">
                            @foreach (var manufacturer in AllManufacturers)
                            {
                                <input type="checkbox" id=@manufacturer.Name value=@manufacturer.Name @onchange="eventArgs =>{ CheckBoxChecked(manufacturer.Name, eventArgs.Value); }" />
                                @manufacturer.Name<br />
                            }
                        </div>
                        <h3>Category:</h3>
                        <div class="p-2 bd-highlight">
                            <select @onchange=@CategorySelect id="select3">
                                <option value="All" style="color:gray">--Category--</option>
                                @foreach (var category in AllCategories)
                                {
                                    <option value="@category.Name" class="others">@category.Name</option>
                                }
                            </select>
                        </div>
                        <h3>Price range</h3>
                        <div>
                            <input class="filterInput" @onchange="PriceStart" type="number" />-
                            <input class="filterInput" @onchange="PriceEnd" type="number" />€
                        </div>

                        <h3>Weight range</h3>
                        <div>
                            <input class="filterInput" @onchange="WeightStart" type="number" />-
                            <input class="filterInput" @onchange="WeightEnd" type="number" />g
                        </div>
                        <div class="p-2 bd-highlight">
                            <input type="checkbox" @onchange="eventArgs =>{ Stock(eventArgs.Value); }" />
                            In stock<br />
                        </div>S
                    </div>
                    <NavLink href="/product/create" Match="NavLinkMatch.All" ActiveClass="active" class="nav-link">
                        <button type="button" class="btn btn-primary">Create new product</button>
                    </NavLink>
                </div>
                <div class="Products">
                    <div class="row">
                        @foreach (var product in Products)
                        {
                            <div class="col-3">
                                <a href="@($"/product/{product.Id}")">
                                    <img class="plimg" src="/images/@product.Photo" />
                                    <p>@product.Name</p>
                                    <p>@product.Price€</p>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (FoundedEntities.EvaluationEntities.Any())
        {
    <h1> Founded evaluations</h1>


    
            @foreach (var evaluation in FoundedEntities.EvaluationEntities)
            {
                <NavLink href=@("/evaluation/" + evaluation.Id) Match="NavLinkMatch.All" ActiveClass="active">
                    <div class="pdeval">
                        <h4>@evaluation.PercentEvaluation %</h4>
                        <h5>@evaluation.ProductName</h5>
                        <p>@evaluation.TextEvaluation</p>
                    </div>
                </NavLink>
            }




        }

    </EditForm>
</div>
