@page "/search/{Phrase}"
@page "/search"

<div class="container">
    
    <EditForm Model="@Phrase" class="my-2 my-lg-0">
        <InputTextArea @bind-Value="Phrase" placeholder="Search" aria-label="Search" type="search" class="form-control mr-sm-2" />

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="@HandleSearchChange()">Search</button>


        @if (FoundedEntities.ManufacturerEntities.Any())
        {
    <h1> Found manufacturers</h1>







        }

        @if (FoundedEntities.ProductEntities.Any())
        {
            <h1> Found notebooks</h1>
            <div class="Products">
                <div class="row">
                    @foreach (var product in FoundedEntities.ProductEntities)
                    {
                        <div class="col-3">
                            <a href="@($"/product/{product.Id}")">
                                <img class="plimg" src="/images/@product.Photo" />
                                <p>@product.Name</p>
                                <p>@product.Price€</p>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }

        @if (FoundedEntities.EvaluationEntities.Any())
        {
    <h1> Found evaluations</h1>


    
            @foreach (var evaluation in FoundedEntities.EvaluationEntities)
            {
                <NavLink href=@("/evaluation/" + evaluation.Id) Match="NavLinkMatch.All" ActiveClass="active">
                    <div class="pdeval">
                        <h4>@evaluation.PercentEvaluation %</h4>
                        <h5>@evaluation.ProductName</h5>
                        <p>@evaluation.TextEvaluation</p>
                    </div>
                </NavLink>
            }




        }

    </EditForm>
</div>
