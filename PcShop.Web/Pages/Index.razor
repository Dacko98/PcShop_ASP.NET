@page "/"
@inherits PageBase

<h1>Hello, world!</h1>

<div class="row">
 


    <div class="col-md">
        @if (Products.Count != 0)
        {
            <table class="table border table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="row">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ingredient in Products)
                    {
                        <tr>
                            <td>
                                @ingredient.Name
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

